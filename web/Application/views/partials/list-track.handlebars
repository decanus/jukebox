<div class="search-result">
    <div class="text">
        <div class="title">
            <a is="jukebox-link" href="{{track.permalink}}" class="label">{{track.title}}</a>

            {{#track.isExplicit}}
                <span class="item track-label -red">EXPLICIT</span>
            {{/track.isExplicit}}

            {{#track.isMusicVideo}}
                <span class="item track-label">MUSIC VIDEO</span>
            {{/track.isMusicVideo}}

            {{#track.isLive}}
                <span class="item track-label">LIVE</span>
            {{/track.isLive}}
        </div>

        <div class="artists">
            {{#track.artists}}

                <span class="sep">{{#if isPrependComma}}, {{/if}}</span>

                {{#if isMain}}
                    <a is="jukebox-link" href="{{artist.permalink}}" class="artist">{{artist.name}}</a>
                {{/if}}

                {{#if isFeatured}}
                    <span class="sep"> feat. </span>
                    <a is="jukebox-link" href="{{artist.permalink}}" class="artist">{{artist.name}}</a>
                {{/if}}

            {{/track.artists}}
        </div>
    </div>

    <div class="buttons">
        <track-link track-id="{{track.id}}" result-id="{{resultId}}" result-type="{{resultType}}" class="button">
            <img src="/images/icons/actions/play.svg" alt="play" title="play"/>
        </track-link>
        <track-link track-id="{{track.id}}" result-id="{{resultId}}" result-type="{{resultType}}" push-to-queue class="button">
            <img src="/images/icons/actions/add.svg" alt="+" title="Add to Queue"/>
        </track-link>
    </div>
</div>
