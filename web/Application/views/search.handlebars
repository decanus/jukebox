<section class="page-content">
    <div class="container">
        <div class="search-container">
            <h2>Search for "{{query}}"</h2>
            {{#if results}}
                {{#each results}}

                    {{#if isArtist}}
                        <div class="search-result">
                            <div class="text">
                                <a is="jukebox-link" href="{{permalink}}" class="title">{{name}}</a>
                            </div>
                        </div>
                    {{/if}}

                    {{#if isTrack}}
                        <div class="search-result">

                            <div class="text">

                                <div class="title">

                                    <a is="jukebox-link" href="{{permalink}}" class="label">{{title}}</a>


                                    {{#isExplicit}}
                                        <span class="item track-label -red">EXPLICIT</span>
                                    {{/isExplicit}}

                                    <span class="item track-label">MUSIC VIDEO</span>

                                </div>




                                <div class="artists">
                                    {{#artists}}

                                        <span class="sep">{{#if isPrependComma}}, {{/if}}</span>

                                        {{#if isMain}}
                                            <a is="jukebox-link" href="{{artist.permalink}}" class="artist">{{artist.name}}</a>
                                        {{/if}}

                                        {{#if isFeatured}}
                                            <span class="sep"> feat. </span>
                                            <a is="jukebox-link" href="{{artist.permalink}}" class="artist">{{artist.name}}</a>
                                        {{/if}}

                                    {{/artists}}
                                </div>

                            </div>

                            <div class="buttons">
                                <track-link track-id="{{id}}" class="button">
                                    <img src="/images/icons/actions/play.svg" alt="play" />
                                </track-link>
                                <track-link track-id="{{id}}" push-to-queue class="button">
                                    <img src="/images/icons/actions/add.svg" alt="+" />
                                </track-link>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}

                {{#if isCompletelyLoaded}}
                {{else}}
                    <search-paginator result-id="{{id}}">
                        <div class="loading-animation"></div>
                    </search-paginator>
                {{/if}}

            {{else}}
                <p>
                    <b>Sorry.</b> We couldn't find anything matching "{{query}}".
                </p>
                <p>
                    Maybe you were looking for <a is="jukebox-link" href="/search?q=Adele">Adele</a>?
                </p>
            {{/if}}
        </div>
    </div>
</section>
