{
  "mappings": {
    "tracks": {
      "_id": {
        "path": "id"
      },
      "_all": {
        "enabled": "false"
      },
      "dynamic": "strict",
      "properties": {
        "id": {"type": "string", "index": "not_analyzed"},
        "title": {"type": "string", "index": "analyzed", "analyzer": "trans_standard"},
        "duration": {"type": "integer", "index": "not_analyzed"},
        "youtube_id": {"type": "string", "index": "not_analyzed"},
        "vevo_id": {"type": "string", "index": "not_analyzed"},
        "is_live": {"type": "boolean", "index": "not_analyzed"},
        "genres": {
          "properties": {
            "id": {"type": "string", "index": "not_analyzed"},
            "name": {"type": "string", "index": "not_analyzed"}
          }
        }
      }
    }
  }
}
